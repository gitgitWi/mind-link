{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.source",
      "!**/worker-configuration.json"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noConsole": "warn",
        "noExplicitAny": "warn"
      }
    }
  }
}
